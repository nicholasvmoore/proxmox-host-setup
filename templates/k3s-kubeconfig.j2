apiVersion: v1
clusters:
- cluster:
    certificate-authority-data: {{ ca_cert | b64encode }}
    server: https://{{ k3s_server }}:6443
  name: default
contexts:
- context:
    cluster: default
    user: default
  name: default
current-context: default
kind: Config
preferences: {}
users:
- name: default
  user:
    client-certificate-data: {{ client_cert | b64encode }}
    client-key-data: {{ client_key | b64encode }}